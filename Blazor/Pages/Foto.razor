@page "/foto"
@inject HttpClient Http

<PageTitle>Random Foto</PageTitle>
<div class="card">
    <div class="card-header">
        <h3>Random Foto</h3>
    </div>
    <div class="card-body text-center">
        <div><img @onload="RandomizeFoto" src=@currentFoto class="img-fluid" style="max-height:300px" /></div>
        <button class="btn btn-primary mt-3" @onclick="RandomizeFoto">Random Foto</button>
    </div>
</div>


@code {
    //@currentFoto
    private List<string> fotos = new List<string>() { "img/flower.jpg", "img/breakfast.jpg", "img/flower_red.jpg", "img/fontain.jpg", "img/lunch.jpg", "img/sunset.jpg" };
    private string currentFoto ="img/flower.jpg";


    private void RandomizeFoto()
    {
        Random randomNumber = new Random();


        currentFoto = fotos[randomNumber.Next(0,(fotos.Count() -1))];
    }
}
